<body class="dark:bg-gray-700 dark:text-gray-50 transition-colors">
  <% if(error){ %>
  <p
    class="bg-red-500 py-2 px-3 rounded shadow remove-animation my-2 absolute left-5 top-28"
  >
    <%= error %>
  </p>
  <% } %>
  <section class="container flex justify-center items-center h-screen">
    <div class="form-container w-96 bg-gray-900 py-5 px-3 rounded shadow">
      <h1
        class="text-2xl text-center mb-4 pb-3 border-b border-gray-700"
        style="font-family: rajdhaniBold"
      >
        New Password
      </h1>
      <form action="/new-password" method="POST" class="text-black">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <input type="hidden" name="userToken" value="<%= userToken %>" />
        <label for="email" class="text-gray-300 mb-1 block">Password</label>
        <input
          class="placeholder-gray-400 w-full mb-4 rounded py-2 px-3 rounded shadow-md bg-gray-700 text-gray-200 outline-none transition-colors focus:bg-gray-800"
          type="password"
          name="password"
          placeholder="#313Abc85"
        />
        <label for="email" class="text-gray-300 mb-1 block"
          >Confirm Password</label
        >
        <input
          class="placeholder-gray-400 w-full mb-4 rounded py-2 px-3 rounded shadow-md bg-gray-700 text-gray-200 outline-none transition-colors focus:bg-gray-800"
          type="password"
          name="confirmPassword"
          placeholder="#313Abc85"
        />
        <button
          type="submit"
          class="mx-auto block bg-purple-500 rounded shadow py-1 px-3 text-gray-300 mt-2 transition-colors hover:bg-purple-900"
        >
          Submit
        </button>
      </form>
    </div>
  </section>
</body>
